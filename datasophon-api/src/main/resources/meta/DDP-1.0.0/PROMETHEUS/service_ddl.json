{
  "name": "PROMETHEUS",
  "label": "Prometheus",
  "description": "高性能监控指标采集与告警系统",
  "version": "2.17.2",
  "sortNum": 10,
  "dependencies":[],
  "packageName": "prometheus-2.17.2.tar.gz",
  "decompressPackageName": "prometheus-2.17.2",
  "roles": [
    {
      "name": "Prometheus",
      "label": "Prometheus",
      "roleType": "master",
      "runAs": {
        "user": "root",
        "group": "root"
      },
      "cardinality": 1,
      "logFile": "logs/prometheus-${host}.out",
      "jmxPort": 9090,
      "startRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "start",
          "prometheus"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control.sh",
        "args": [
          "stop",
          "prometheus"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "status",
          "prometheus"
        ]
      },
      "restartRunner": {
        "timeout": "60",
        "program": "control.sh",
        "args": [
          "restart",
          "prometheus"
        ]
      },
      "externalLink": {
        "name": "Prometheus Ui",
        "label": "Prometheus Ui",
        "url": "http://${host}:9090"
      }
    }
  ],
  "configWriter": {
    "generators": [
      {
        "filename": "prometheus.yml",
        "configFormat": "custom",
        "outputDirectory": "",
        "templateName": "prometheus.ftl",
        "includeParams": [
          "scrape_interval",
          "evaluation_interval"
        ]
      }
    ]
  },
  "parameters": [
    {
      "name": "scrape_interval",
      "label": "Prometheus指标采集时间间隔",
      "description": "Prometheus指标采集时间间隔，单位秒",
      "required": true,
      "configType": "map",
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "15"
    },
    {
      "name": "evaluation_interval",
      "label": "Prometheus指标计算时间间隔",
      "description": "Prometheus指标计算时间间隔，单位秒",
      "required": true,
      "configType": "map",
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "15"
    }
  ]
}