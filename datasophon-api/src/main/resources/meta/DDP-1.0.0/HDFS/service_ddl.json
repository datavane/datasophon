{
  "name": "HDFS",
  "label": "HDFS",
  "description": "分布式大数据存储",
  "version": "3.3.3",
  "sortNum": 1,
  "dependencies": [
    "ZOOKEEPER"
  ],
  "packageName": "hadoop-3.3.3.tar.gz",
  "decompressPackageName": "hadoop-3.3.3",
  "runAs": "root",
  "roles": [
    {
      "name": "JournalNode",
      "label": "JournalNode",
      "roleType": "master",
      "cardinality": "1+",
      "sortNum": 1,
      "logFile": "${hadoopLogDir}/hadoop-${user}-journalnode-${host}.log",
      "jmxPort": 27003,
      "startRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "start",
          "journalnode"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_hadoop.sh",
        "args": [
          "stop",
          "journalnode"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "status",
          "journalnode"
        ]
      }
    },
    {
      "name": "NameNode",
      "label": "NameNode",
      "roleType": "master",
      "cardinality": "1+",
      "sortNum": 2,
      "logFile": "${hadoopLogDir}/hadoop-${user}-namenode-${host}.log",
      "jmxPort": "27001",
      "startRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "start",
          "namenode"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_hadoop.sh",
        "args": [
          "stop",
          "namenode"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "status",
          "namenode"
        ]
      },
      "restartRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "restart",
          "namenode"
        ]
      },
      "externalLink": {
        "name": "NameNode Ui",
        "label": "NameNode Ui",
        "url": "http://${host}:9870"
      }
    },
    {
      "name": "DataNode",
      "label": "DataNode",
      "roleType": "worker",
      "cardinality": "1+",
      "sortNum": 4,
      "logFile": "${hadoopLogDir}/hadoop-${user}-datanode-${host}.log",
      "jmxPort": "27002",
      "startRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "start",
          "datanode"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_hadoop.sh",
        "args": [
          "stop",
          "datanode"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "status",
          "datanode"
        ]
      }
    },

    {
      "name": "ZKFC",
      "label": "ZKFC",
      "roleType": "master",
      "cardinality": "1+",
      "sortNum": 3,
      "logFile": "${hadoopLogDir}/hadoop-${user}-zkfc-${host}.log",
      "jmxPort": 27004,
      "startRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "start",
          "zkfc"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_hadoop.sh",
        "args": [
          "stop",
          "zkfc"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "status",
          "zkfc"
        ]
      }
    },{
      "name": "ZKFC",
      "label": "ZKFC",
      "roleType": "master",
      "cardinality": "1+",
      "sortNum": 3,
      "logFile": "${hadoopLogDir}/hadoop-${user}-zkfc-${host}.log",
      "jmxPort": 27004,
      "startRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "start",
          "zkfc"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_hadoop.sh",
        "args": [
          "stop",
          "zkfc"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_hadoop.sh",
        "args": [
          "status",
          "zkfc"
        ]
      }
    },{
      "name": "HdfsClient",
      "label": "HdfsClient",
      "roleType": "client",
      "cardinality": "1+"
    }
  ],
  "configWriter": {
    "generators": [
      {
        "filename": "core-site.xml",
        "configFormat": "xml",
        "outputDirectory": "etc/hadoop/",
        "includeParams": [
          "fs.defaultFS",
          "hadoop.proxyuser.root.hosts",
          "hadoop.proxyuser.root.groups",
          "hadoop.http.staticuser.user",
          "ha.zookeeper.quorum",
          "hadoop.tmp.dir",
          "custom.core.site.xml"
        ]
      },
      {
        "filename": "hadoop-env.sh",
        "configFormat": "custom",
        "outputDirectory": "etc/hadoop/",
        "templateName": "hadoop-env.ftl",
        "includeParams": [
          "hadoopLogDir",
          "custom.hadoop.env.sh"
        ]
      },
      {
        "filename": "hdfs-site.xml",
        "configFormat": "xml",
        "outputDirectory": "etc/hadoop/",
        "includeParams": [
          "dfs.replication",
          "dfs.namenode.name.dir",
          "dfs.namenode.checkpoint.dir",
          "dfs.blocksize",
          "dfs.namenode.handler.count",
          "dfs.datanode.data.dir",
          "dfs.nameservices",
          "dfs.ha.namenodes.nameservice1",
          "dfs.namenode.rpc-address.nameservice1.nn1",
          "dfs.namenode.rpc-address.nameservice1.nn2",
          "dfs.namenode.http-address.nameservice1.nn1",
          "dfs.namenode.http-address.nameservice1.nn2",
          "dfs.namenode.shared.edits.dir",
          "dfs.ha.fencing.methods",
          "dfs.ha.fencing.ssh.private-key-files",
          "dfs.journalnode.edits.dir",
          "dfs.permissions.enabled",
          "dfs.ha.automatic-failover.enabled",
          "dfs.client.failover.proxy.provider.nameservice1",
          "custom.hdfs.site.xml",
          "dfs.permissions",
          "dfs.namenode.inode.attributes.provider.class",
          "dfs.hosts",
          "dfs.hosts.exclude"
        ]
      },
      {
        "filename": "install.properties",
        "configFormat": "custom",
        "outputDirectory": "ranger-hdfs-plugin",
        "templateName": "ranger-hdfs.ftl",
        "includeParams": [
          "rangerAdminUrl"
        ]
      }
    ]
  },
  "parameters": [
    {
      "name": "fs.defaultFS",
      "label": "NameNode地址",
      "description": "NameNode地址",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "hdfs://${fs.defaultFS}"
    },
    {
      "name": "hadoop.tmp.dir",
      "label": "Hadoop运行时文件存储目录",
      "description": "Hadoop运行时文件存储目录",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "/data/tmp/hadoop"
    },
    {
      "name": "hadoop.http.staticuser.user",
      "label": "HDFS网页登录使用静态用户名",
      "description": "配置HDFS网页登录使用的静态用户",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "admin"
    },
    {
      "name": "hadoop.proxyuser.root.hosts",
      "label": "允许通过代理访问的主机节点",
      "description": "配置root(超级用户)允许通过代理访问的主机节点",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "*"
    },
    {
      "name": "hadoop.proxyuser.root.groups",
      "label": "允许通过代理用户所属组",
      "description": "配置root(超级用户)允许通过代理用户所属组",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "*"
    },
    {
      "name": "dfs.replication",
      "label": "BLOCK副本数",
      "description": "配置hdfs副本数量",
      "configName": "dfs.replication",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "3"
    },
    {
      "name": "dfs.namenode.name.dir",
      "label": "NameNode数据存储目录",
      "description": "用于配置NameNode数据存储目录",
      "configType": "path",
      "required": true,
      "type": "multiple",
      "value": [
        "/data/dfs/nn"
      ],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    },
    {
      "name": "dfs.namenode.checkpoint.dir",
      "label": "元数据checkpoint目录",
      "description": "配置元数据checkpoint目录，当namenode故障退出需要重新恢复时，可以从secondary namenode的工作目录中将fsimage拷贝到namenode的工作目录，以恢复namenode的元数据",
      "configType": "path",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "/data/dfs/snn"
    },
    {
      "name": "dfs.blocksize",
      "label": "Block大小",
      "description": "用于配置Block大小,可根据磁盘性能进行计算",
      "configName": "dfs.blocksize",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "268435456"
    },
    {
      "name": "dfs.namenode.handler.count",
      "label": "NameNode处理线程池大小",
      "description": "用于配置NameNode处理线程池大小",
      "configName": "dfs.namenode.handler.count",
      "required": true,
      "minValue": 0,
      "maxValue": 32,
      "type": "slider",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "8"
    },
    {
      "name": "dfs.datanode.data.dir",
      "label": "DataNode数据存储目录",
      "description": "DataNode数据存储目录，可配置多个，按逗号分隔",
      "configType": "path",
      "required": true,
      "type": "multiple",
      "value": [
        "/data/dfs/dn"
      ],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    },
    {
      "name": "hadoop.security.authentication",
      "label": "Hadoop安全认证",
      "description": "Hadoop安全认证",
      "required": true,
      "type": "select",
      "value": "",
      "configurableInWizard": true,
      "selectValue": [
        "simple",
        "kerberos"
      ],
      "hidden": false,
      "defaultValue": "simple"
    },
    {
      "name": "namenodeHeapSize",
      "label": "NameNode堆内存大小",
      "description": "配置NameNode堆内存大小",
      "configType": "map",
      "required": false,
      "minValue": 0,
      "maxValue": 32,
      "type": "slider",
      "value": "",
      "unit": "GB",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "2"
    },
    {
      "name": "datanodeHeapSize",
      "label": "DataNode堆内存大小",
      "description": "配置DataNode堆内存大小",
      "configType": "map",
      "required": false,
      "minValue": 0,
      "maxValue": 32,
      "type": "slider",
      "value": "",
      "unit": "GB",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "2"
    },
    {
      "name": "hadoopLogDir",
      "label": "Hadoop日志文件目录",
      "description": "配置Hadoop系统日志文件目录，目录将存放NameNode，DataNode,ResourceManager等服务的系统日志",
      "configType": "map",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${HADOOP_HOME}/logs"
    },
    {
      "name": "dfs.nameservices",
      "label": "集群名称",
      "description": "集群名称",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "nameservice1"
    },
    {
      "name": "ha.zookeeper.quorum",
      "label": "zk地址",
      "description": "zk地址",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "${zkUrls}"
    },
    {
      "name": "dfs.ha.automatic-failover.enabled",
      "label": "是否开启自动故障转移",
      "description": "是否开启自动故障转移",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "true"
    },
    {
      "name": "dfs.ha.namenodes.nameservice1",
      "label": "NameNode节点",
      "description": "NameNode节点",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "nn1,nn2"
    },
    {
      "name": "dfs.namenode.rpc-address.nameservice1.nn1",
      "label": "nn1的rpc通信地址",
      "description": "nn1的rpc通信地址",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "${nn1}:8020"
    },
    {
      "name": "dfs.namenode.rpc-address.nameservice1.nn2",
      "label": "nn2的rpc通信地址",
      "description": "nn2的rpc通信地址",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "${nn2}:8020"
    },
    {
      "name": "dfs.namenode.http-address.nameservice1.nn1",
      "label": "nn1的http通信地址",
      "description": "nn1的rpc通信地址",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "${nn1}:9870"
    },
    {
      "name": "dfs.namenode.http-address.nameservice1.nn2",
      "label": "nn2的http通信地址",
      "description": "nn2的rpc通信地址",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "${nn2}:9870"
    },
    {
      "name": "dfs.namenode.shared.edits.dir",
      "label": "NameNode元数据在JournalNode存放位置",
      "description": "NameNode元数据在JournalNode存放位置",
      "required": false,
      "configType": "ha",
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "qjournal://${journalNode1}:8485;${journalNode2}:8485;${journalNode3}:8485/nameservice1"
    },
    {
      "name": "dfs.ha.fencing.methods",
      "label": "隔离机制",
      "description": "隔离机制",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "shell(/bin/true)"
    },
    {
      "name": "dfs.ha.fencing.ssh.private-key-files",
      "label": "隔离机制所需的ssh密钥",
      "description": "隔离机制所需的ssh密钥",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "/root/.ssh/id_rsa"
    },
    {
      "name": "dfs.journalnode.edits.dir",
      "label": "journalnode存储目录",
      "description": "journalnode存储目录",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "/data/dfs/jn"
    },
    {
      "name": "dfs.permissions.enabled",
      "label": "是否开启权限检查",
      "description": "是否开启权限检查",
      "configType": "ha",
      "required": false,
      "type": "switch",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": true
    },
    {
      "name": "dfs.client.failover.proxy.provider.nameservice1",
      "label": "容错实现类",
      "description": "容错实现类",
      "configType": "ha",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider"
    },

    {
      "name": "dfs.permissions",
      "label": "启用Ranger权限",
      "description": "",
      "configType": "permission",
      "required": false,
      "type": "switch",
      "value": true,
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": true
    },
    {
      "name": "dfs.namenode.inode.attributes.provider.class",
      "label": "RangerHdfs认证类",
      "description": "",
      "configType": "permission",
      "required": false,
      "type": "input",
      "value": "org.apache.ranger.authorization.hadoop.RangerHdfsAuthorizer",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "org.apache.ranger.authorization.hadoop.RangerHdfsAuthorizer"
    },
    {
      "name": "rangerAdminUrl",
      "label": "Ranger访问地址",
      "description": "",
      "required": false,
      "configType": "map",
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": ""
    },
    {
      "name": "dfs.hosts",
      "label": "DataNode白名单",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${INSTALL_PATH}/hadoop-3.3.3/etc/hadoop/whitelist"
    },
    {
      "name": "dfs.hosts.exclude",
      "label": "DataNode黑名单",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${INSTALL_PATH}/hadoop-3.3.3/etc/hadoop/blacklist"
    },
    {
      "name": "custom.core.site.xml",
      "label": "自定义配置core-site.xml",
      "description": "自定义配置",
      "configType": "custom",
      "required": false,
      "type": "multipleWithKey",
      "value": [],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    },
    {
      "name": "custom.hdfs.site.xml",
      "label": "自定义配置hdfs-site.xml",
      "description": "自定义配置",
      "configType": "custom",
      "required": false,
      "type": "multipleWithKey",
      "value": [],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    },
    {
      "name": "custom.hadoop.env.sh",
      "label": "自定义配置hadoop-env.sh",
      "description": "自定义配置",
      "configType": "custom",
      "required": false,
      "type": "multipleWithKey",
      "value": [],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    }
  ]
}