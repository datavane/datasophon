{
  "name": "ES",
  "label": "ElasticSearch",
  "description": "高性能搜索引擎",
  "version": "7.16.2",
  "sortNum": 9,
  "dependencies": [],
  "packageName": "elasticsearch-7.16.2.tar.gz",
  "decompressPackageName": "elasticsearch-7.16.2",
  "roles": [
    {
      "name": "ElasticSearch",
      "label": "ElasticSearch",
      "roleType": "master",
      "cardinality": "1+",
      "logFile": "logs/ddp_es.log",
      "runAs": {
        "user": "elastic",
        "group": "elastic"
      },
      "sortNum": 1,
      "startRunner": {
        "timeout": "60",
        "program": "bin/elasticsearch",
        "args": [
          "-d",
          "-p",
          "pid/elasticsearch.pid"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "control_es.sh",
        "args": [
          "stop",
          "elasticsearch"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "control_es.sh",
        "args": [
          "status",
          "elasticsearch"
        ]
      },
      "restartRunner": {
        "timeout": "60",
        "program": "control_es.sh",
        "args": [
          "restart",
          "elasticsearch"
        ]
      }
    },
    {
      "name": "EsExporter",
      "label": "EsExporter",
      "roleType": "master",
      "cardinality": "1",
      "logFile": "elasticsearch-exporter/logs/es_exporter-${host}.out",
      "jmxPort": 9114,
      "sortNum": 2,
      "startRunner": {
        "timeout": "60",
        "program": "elasticsearch-exporter/control_es_exporter.sh",
        "args": [
          "start",
          "es_exporter"
        ]
      },
      "stopRunner": {
        "timeout": "600",
        "program": "elasticsearch-exporter/control_es_exporter.sh",
        "args": [
          "stop",
          "es_exporter"
        ]
      },
      "statusRunner": {
        "timeout": "60",
        "program": "elasticsearch-exporter/control_es_exporter.sh",
        "args": [
          "status",
          "es_exporter"
        ]
      },
      "restartRunner": {
        "timeout": "60",
        "program": "elasticsearch-exporter/control_es_exporter.sh",
        "args": [
          "restart",
          "es_exporter"
        ]
      }
    }
  ],
  "configWriter": {
    "generators": [
      {
        "filename": "elasticsearch.yml",
        "configFormat": "properties3",
        "outputDirectory": "config",
        "includeParams": [
          "cluster.name",
          "node.name",
          "node.master",
          "network.host",
          "http.port",
          "transport.tcp.port",
          "transport.tcp.compress",
          "discovery.seed_hosts",
          "discovery.zen.minimum_master_nodes",
          "cluster.initial_master_nodes",
          "gateway.recover_after_nodes",
          "http.cors.enabled",
          "http.cors.allow-origin",
          "path.data",
          "custom.elasticsearch.yml"
        ]
      },
      {
        "filename": "jvm.options",
        "configFormat": "custom",
        "outputDirectory": "",
        "templateName": "jvm.options.ftl",
        "includeParams": [
          "heapSize"
        ]
      }
    ]
  },
  "parameters": [
    {
      "name": "cluster.name",
      "label": "集群名称",
      "description": "集群名称",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "ddp_es"
    },{
      "name": "node.name",
      "label": "节点名称",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${host}"
    },{
      "name": "node.master",
      "label": "是否竞选主节点",
      "description": "是不是有资格竞选主节点",
      "required": true,
      "type": "switch",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": true
    },{
      "name": "network.host",
      "label": "节点地址",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${host}"
    },{
      "name": "http.port",
      "label": "对外服务端口",
      "description": "对外提供服务的端口",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "9200"
    },{
      "name": "transport.tcp.port",
      "label": "集群通信端口",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "9300"
    },{
      "name": "transport.tcp.compress",
      "label": "数据传输是否压缩",
      "description": "设置是否压缩tcp传输时的数据，默认为false，不压缩",
      "required": true,
      "type": "switch",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": false
    },{
      "name": "discovery.seed_hosts",
      "label": "服务发现种子主机",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${seedHosts}"
    },{
      "name": "discovery.zen.minimum_master_nodes",
      "label": "discovery.zen.minimum_master_nodes",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "2"
    },{
      "name": "cluster.initial_master_nodes",
      "label": "初始主节点",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "${initMasterNodes}"
    },{
      "name": "http.cors.enabled",
      "label": "是否可跨域",
      "description": "",
      "required": true,
      "type": "switch",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": true
    },{
      "name": "http.cors.allow-origin",
      "label": "支持的跨域范围",
      "description": "",
      "required": true,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": "\"*\""
    },
    {
      "name": "path.data",
      "label": "数据存储目录",
      "description": "",
      "configType": "path",
      "required": true,
      "type": "multiple",
      "value": ["/data/es"],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    },
    {
      "name": "heapSize",
      "label": "ES堆内存大小",
      "description": "",
      "required": false,
      "type": "input",
      "value": "",
      "configurableInWizard": true,
      "hidden": true,
      "defaultValue": "2g"
    },
    {
      "name": "custom.elasticsearch.yml",
      "label": "自定义配置elasticsearch.yml",
      "description": "自定义配置",
      "configType": "custom",
      "required": false,
      "type": "multipleWithKey",
      "value": [],
      "configurableInWizard": true,
      "hidden": false,
      "defaultValue": ""
    }
  ]
}